<!DOCTYPE html>
<html lang="en">
<%- include ('partials/head.ejs') %>

<!-- BODY -->

<body>

    <%- include ('partials/header') %>

    <!-- COMIENZO MAIN -->

    <main class="perfilUsuario-Main">
        <div class="contenedor-perfil">

            <div class="barra-titulo-perfil">
                <h2 class="titulo-perfilUsuario">Perfil de Usuario</h2>
            </div>
            <div class="perfil-body">

                <div class="container-info">
                    <div class="items-perfil">
                        <div class="titulos-perfil">Nombre:</div>
                        <div class="control-datos"><%= logueado.first_name %></div>
                    </div>
                    <div class="items-perfil">
                        <div class="titulos-perfil">Apellido:</div>
                        <div class="control-datos"><%= logueado.last_name %></div>
                    </div>
                    <div class="items-perfil">
                        <div class="titulos-perfil">Email:</div>
                        <div class="control-datos"><%= logueado.email%></div>
                    </div>
                    <div class="items-perfil">
                        <div class="titulos-perfil">Fecha de Nacimiento</div>
                        <div class="control-datos"><%= logueado.date_of_birth%></div>
                    </div>
                    <div class="items-perfil">
                        <div class="titulos-perfil">Contrase√±a:</div>
                        <div class="control-datos">***********</div>
                    </div>

                </div>
                <div class="container-avatar">
                    <img class="control-avatar" src="/img/users/<%=logueado.avatar%>" alt="Avatar">
                </div>

            </div>
            <div class="controlBoton-logout">
                <form method="GET" action="/logout">
                    <button class="boton-logout">Logout</button>
                </form>
            </div>
        </div>
        </div>


    </main>

    <!-- FOOTER -->
    <%- include ('partials/footer') %>

</body>

</html>