<!DOCTYPE html>
<html lang="en">
    <%- include ('partials/head.ejs') %> 

    <!-- BODY -->

    <body class="indexBody">

    <%- include ('partials/header') %> 

<!-- COMIENZO MAIN -->

    <main class="indexMain">
        <div class="banner-carrusel">
            <img src="/img/adidas-banner-otono.jpg" alt="">
        </div>

        <!-- SECCION WALLPAPERS PRINCIPALES HOME -->

<section class="wallpaper-section">
    <article class="wallpaper-article">
        <div class="wallpaper">
<img src="/img/adidas-wallpaper1.png" alt="">
</div>
</article>
<article class="wallpaper-article">
    <div class="wallpaper">
<img src="/img/nike-wallpaper1.jpg" alt="">
</div>
 </article>

</section>

      <!-- SECCION DESTACADOS HOME -->

<h2>PRODUCTOS DESTACADOS</h2>

<section class="indexDestacados">
    <% productosDestacados.forEach(producto => { %>
    <article class="articleIndex">
       
        <div class="productIndex">
        <a href="/productDetail"><img src="/img/<%=producto.imagen%> " alt=""></a>
        <div class="product-detail-Index">
            <p><%=producto.detalleDeProducto%></p>
            <p class="product-price-Index"><%=producto.precioProducto%></p>
        </div>
        
        </div>
  
            </article>
            <% }) %>
</section>
      <!-- SECCION REBAJAS HOME -->

      <h2>REBAJAS</h2>
<section class="indexDestacados">
    <% descuentos.forEach(producto => { %>
    <article class="articleIndex">
        <div class="productIndex">
            <a href="/productDetail"><img src="/img/<%=producto.imagen%> " alt=""></a>
        <div class="product-detail-Index">
            <p><%=producto.detalleDeProducto%> </p>
            <p class="product-price-Index"><%=producto.precioProducto%> </p>
            <p><%=producto.rebaja%> </p>
        </div>
        
        </div>
            </article>
            <% }) %>

</section>

    </main>

    <!-- FOOTER -->
    <%- include ('partials/footer') %> 

</body>
</html>